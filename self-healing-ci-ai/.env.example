# Environment Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=<YOUR_AWS_ACCESS_KEY_ID>
AWS_SECRET_ACCESS_KEY=<YOUR_AWS_SECRET_ACCESS_KEY>

# =============================================================================
# S3 Configuration
# =============================================================================
LOG_BUCKET=<YOUR_LOG_BUCKET_NAME>  # Will be created by Terraform

# =============================================================================
# ECR/ECS Configuration
# =============================================================================
ECR_REPO=<YOUR_ECR_REPO_URI>       # Will be output by Terraform
ECS_CLUSTER=<YOUR_ECS_CLUSTER>     # Will be created by Terraform
ECS_SERVICE=<YOUR_ECS_SERVICE>     # Will be created by Terraform

# =============================================================================
# Email Configuration (Amazon SES)
# =============================================================================
SES_FROM_EMAIL=<YOUR_VERIFIED_SENDER_EMAIL>
SES_TO_EMAIL=<YOUR_RECIPIENT_EMAIL>

# =============================================================================
# LLM Provider Configuration
# =============================================================================
# Choose: groq | openai | huggingface
PROVIDER=groq
LLM_API_KEY=<YOUR_LLM_API_KEY>

# Groq (Recommended - Fast & Cheap)
# Get free API key from: https://console.groq.com/

# OpenAI (Alternative)
# Get API key from: https://platform.openai.com/

# HuggingFace (Free models)
# Get API key from: https://huggingface.co/settings/tokens

# =============================================================================
# GitHub Configuration
# =============================================================================
GITHUB_TOKEN=<YOUR_GITHUB_PAT>     # Or use GITHUB_TOKEN in Actions
GITHUB_REPO=<YOUR_USERNAME/REPO_NAME>

# =============================================================================
# Project Configuration
# =============================================================================
PROJECT_PREFIX=self-healing-ci    # Used for resource naming
ENVIRONMENT=dev                   # dev | staging | prod

# =============================================================================
# Testing Configuration
# =============================================================================
FAIL_TEST=0                      # Set to 1 to simulate test failures
